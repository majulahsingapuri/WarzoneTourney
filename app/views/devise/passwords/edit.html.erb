<div class="card">
  <div class="card-header">
    Change Password
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field mb-3">
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:'form-control', placeholder:'New Password (' + @minimum_password_length + ' characters minimum' %>
      </div>

      <div class="field mb-3">
        <%= f.label :password_confirmation, "Confirm new password" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Change my password", class:'btn btn-secondary' %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>

<h2>Change your password</h2>

